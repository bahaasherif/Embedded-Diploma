unsigned int IRQ_Flag = 0 ;

void my_wait(int x)
{
	unsigned int i,j;
	for ( i =0 ; i < x ; i++)
		for ( j=0 ; j<255;j++);
}

void EXT9_CallBack(void)
{
	LCD_clear_screen();
	IRQ_Flag = 1;
	LCD_WRITE_STRING("IRQ EXT9 is happened _|-");
	my_wait(1000);
}


int main(void)
{
	RCC_GPIOA_CLK_EN();
	RCC_GPIOB_CLK_EN();
	RCC_AFIO_CLK_EN();

	LCD_INIT();
	LCD_clear_screen();

	EXTI_PinConfig_t EXTI_CFG;
	EXTI_CFG.EXTI_PIN = EXTI9PB9;
	EXTI_CFG.EXTI_Trigger = EXTI_Trigger_Rising;
	EXTI_CFG.P_IRQ_CallBack = EXT9_CallBack ;
	EXTI_CFG.IRQ_EN = EXTI_IRQ_Enable ;

	MCAL_EXTI_GPIO_Init(&EXTI_CFG);

	IRQ_Flag = 1;

	while(1)
	{
		if(IRQ_Flag)
		{
			LCD_clear_screen();
			IRQ_Flag=0;
		}
		my_wait(1000);

	}
}
