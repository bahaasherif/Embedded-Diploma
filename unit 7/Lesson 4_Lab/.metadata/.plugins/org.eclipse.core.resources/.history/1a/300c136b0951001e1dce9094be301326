	PinCfg.GPIO_Mode = GPIO_MODE_INPUT_FLO;
	MCAL_GPIO_Init(EXTI_Config->EXTI_PIN.GPIO_Port, &PinCfg);


	//SECOND updating the AFIO
	uint8_t AFIO_Index = EXTI_Config->EXTI_PIN.ETI_InputLineNumber / 4  ;
